generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  name         String
  email        String   @unique
  passwordHash String
  role         String   @default("user")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model WeatherLog {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  city        String
  temperature Float
  humidity    Float
  windSpeed   Float
  condition   String   
  createdAt   DateTime @default(now())
}

model Insight {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  date      DateTime @default(now())
  summary   String
}
