generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model User {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  name         String
  email        String   @unique
  passwordHash String
  role         String   @default("user")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
